{
    "framework" : "jasmine",
    "launch_in_dev" : [ "Chrome", "API Unit", "API Integration" ],
    "launch_in_ci" : ["PhantomJS"],
    "launchers": {
        "API Unit": {
            "command": "mocha server/tests/**/*.spec.js --growl --reporter=tap",
            "protocol": "tap"
        },
        "API Integration": {
            "command": "mocha server/tests/**/*.e2e.js --growl --reporter=tap",
            "protocol": "tap"
        }
    },
    "src_files" : [
        "server/**/*.js"
    ],
    "serve_files": [
        "build/js/app.js",
        "vendor/angular-mocks/angular-mocks.js",
        "build/js/spec.js"
    ]
}